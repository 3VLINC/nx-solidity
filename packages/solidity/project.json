{
  "name": "solidity",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/solidity/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/solidity",
        "main": "packages/solidity/src/index.ts",
        "tsConfig": "packages/solidity/tsconfig.lib.json",
        "assets": [
          "packages/solidity/*.md",
          {
            "input": "./packages/solidity/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/solidity/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/solidity",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/solidity",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/solidity/**/*.ts",
          "packages/solidity/package.json",
          "packages/solidity/generators.json",
          "packages/solidity/executors.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/solidity/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
