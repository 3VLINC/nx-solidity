{
  "name": "hardhat",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/hardhat/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/hardhat",
        "main": "packages/hardhat/src/index.ts",
        "tsConfig": "packages/hardhat/tsconfig.lib.json",
        "assets": [
          "packages/hardhat/*.md",
          {
            "input": "./packages/hardhat/src",
            "glob": "**/!(*.ts)",
            "output": "./src"
          },
          {
            "input": "./packages/hardhat/src",
            "glob": "/generators/hardhat/files/**/*.ts",
            "output": "./src"
          },
          {
            "input": "./packages/hardhat/src",
            "glob": "**/*.d.ts",
            "output": "./src"
          },
          {
            "input": "./packages/hardhat",
            "glob": "generators.json",
            "output": "."
          },
          {
            "input": "./packages/hardhat",
            "glob": "executors.json",
            "output": "."
          }
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs hardhat {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/hardhat/**/*.ts",
          "packages/hardhat/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/hardhat/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "tags": []
}
